(* ========================================================= *)
(*  TOKEN DEFINITIONS          *)
(* ========================================================= *)
(*  NUMBER      → digits                                     *)
(*  STRING      → " ... "                                    *)
(*  IDENT       → variable/function names                    *)
(*  KEYWORD     → if | else | print                          *)
(*  OP          → >= | <= | == | != | = | + | - | * | /      *)
(*  SYMBOLS     → ( ) { } ;                                   *)
(* ========================================================= *)

Program       ::= Statement* ;

(* ---------------- Statements ---------------- *)

Statement     ::= Assignment ";"
                | PrintStmt ";"
                | IfStmt
                | Block ;

Assignment    ::= IDENT "=" Expression ;

PrintStmt     ::= "print" "(" Expression ")" ;

IfStmt        ::= "if" "(" Expression ")" Statement
                ( "else" Statement )? ;

Block         ::= "{" Statement* "}" ;

(* ---------------- Expressions ---------------- *)

Expression    ::= Equality ;

Equality      ::= Comparison ( ( "==" | "!=" ) Comparison )* ;

Comparison    ::= Term ( ( ">=" | "<=" ) Term )* ;

Term          ::= Factor ( ( "+" | "-" ) Factor )* ;

Factor        ::= Unary ( ( "*" | "/" ) Unary )* ;

Unary         ::= ( "-" )? Primary ;

Primary       ::= NUMBER
                | STRING
                | IDENT
                | "(" Expression ")" ;
